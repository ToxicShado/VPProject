<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <appSettings>
    <!-- Threshold Configuration for Warnings -->
    <add key="V_threshold" value="3.5" />
    <add key="Z_threshold" value="0.05" />
    <add key="DeviationPercent" value="25" />
    <add key="T_threshold" value="2.0" />
    
    <!-- Event System Configuration -->
    <add key="EnableDetailedConsoleLogging" value="false" />
    <add key="EnableWarningConsoleLogging" value="true" />
    <add key="EnableFileLogging" value="true" />
    <add key="EnableStatistics" value="true" />
    <add key="LogDirectory" value="Logs" />
    
    <!-- Warning Messages Configuration -->
    <add key="VoltageWarningMessage" value="Battery voltage below safe operating threshold" />
    <add key="ImpedanceWarningMessage" value="Battery impedance indicates potential issues" />
    <add key="TemperatureWarningMessage" value="Battery temperature outside normal range" />
    <add key="FrequencyWarningMessage" value="Test frequency unusually high" />
    <add key="DeviationWarningMessage" value="Measurement deviation exceeds acceptable range" />
    <add key="TemperatureSpikeMessage" value="Temperature spike detected between consecutive measurements" />
  </appSettings>
  <startup> 
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
  </startup>
  <system.serviceModel>
    <bindings>
      <netTcpBinding>
        <binding name="NetTcpBinding_EIS"
                 transferMode="Streamed"
                 maxReceivedMessageSize="102400" 
                 openTimeout="00:01:00"
                 closeTimeout="00:01:00"
                 receiveTimeout="00:10:00"
                 sendTimeout="00:10:00">
          <readerQuotas maxArrayLength="102400" maxStringContentLength="102400"/>
        </binding>
      </netTcpBinding>
    </bindings>
    <services>
      <service name="Server.BatteryServer">
        <endpoint address=""
                  binding="netTcpBinding"
                  bindingConfiguration="NetTcpBinding_EIS"
                  contract="Common.IBatteryCommands" />
        <host>
          <baseAddresses>
            <add baseAddress="net.tcp://localhost:25565/BatteryServer"/>
          </baseAddresses>
        </host>
      </service>
    </services>
  </system.serviceModel>
</configuration>